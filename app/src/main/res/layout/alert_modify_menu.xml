<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="back to edit event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backed1"
            android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/edname" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:text="Enter the new description of alert"
            android:ems="10"
            android:id="@+id/edname" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/eddate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter the new date"
            android:ems="10"
            android:id="@+id/eddate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="204dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter the new time"
            android:ems="10"
            android:id="@+id/edtime" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/eddate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="113dp"
    />
    <TextView
            android:text="  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrongalerttime"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/edtime" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp"/>
    <Button
            android:text="Change alert name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changalertname"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/wrongalerttime" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
    <Button
            android:text="Change alert time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changealerttime"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/changalertname" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>