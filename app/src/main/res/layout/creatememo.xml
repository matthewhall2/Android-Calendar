<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="back to edit event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backed3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp"/>
    <EditText
            android:layout_width="275dp"
            android:layout_height="59dp"
            android:inputType="textPersonName"
            android:text="Enter the description of memo"
            android:ems="10"
            android:id="@+id/memo_message" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/backed3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"/>
    <Button
            android:text="Create this memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/creatememomess"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/memo_message" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>