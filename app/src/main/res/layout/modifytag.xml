<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter a tag "
            android:ems="10"
            android:id="@+id/edtagname" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/backtoedevent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/addtag" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="110dp"/>
    <Button
            android:text="Edit Event page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backtoedevent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="265dp" android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/edtagname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"/>
    <Button
            android:text="add entered tag "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addtag"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/edtagname" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="89dp" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/removetag" app:layout_constraintEnd_toStartOf="@+id/removetag"
            android:layout_marginEnd="2dp" app:layout_constraintHorizontal_bias="0.006"/>
    <Button
            android:text="Remove entered tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/removetag"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/addtag" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="91dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrong_tag"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="91dp"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/addtag"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="261dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/edtagname"/>
</androidx.constraintlayout.widget.ConstraintLayout>